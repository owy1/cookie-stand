<p>lab6_cookie stand</p>

<p id="demo"></p>

<script>
var Alki = {
  minCustperDay : 2,
  maxCustperDay : 16,
  avgCookieEaCust : 4.6,
};

//generate random number with min and max
Alki.generateRandom = function(min,max) {
  return Math.floor(Math.random() * (max-min+1)) + min;
}

console.log(Alki.generateRandom(Alki.minCustperDay,Alki.maxCustperDay), Alki.avgCookieEaCust);

Alki.soldHourly = [];
var cookieTot = 0;

Alki.cookieSoldEaHr = function() {
  for (var i=0;i<15;i++) {
  var cookiePerHr = Math.round(Alki.generateRandom(Alki.minCustperDay,Alki.maxCustperDay) * Alki.avgCookieEaCust);
  cookieTot += cookiePerHr;
  Alki.soldHourly.push(cookiePerHr);
}

}

Alki.cookieSoldEaHr();
console.log(Alki.soldHourly);
console.log('total cookies '+cookieTot);

</script>

</body>
